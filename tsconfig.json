{
    "include": [
        "./src/**/*",
        "./test/**/*",
        "./typings/**/*",
        "./node_modules/@types/**/*"
    ],
    "compilerOptions": {
        "outDir": "./build",
        "declaration": true,
        "baseUrl": "./src",
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": false,
        "sourceMap": true,
        "importHelpers": true,
        "jsx": "react",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "lib": ["dom", "es2015", "es2015.core", "es6", "es5"]
    }
}
